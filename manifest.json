{
  "manifest_version": 3,
  "name": "Laggy Browsing Extension",
  "version": "1.0",
  "description": "Consumes CPU on each page to slow down browsing",
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "action": { "default_title": "Make browsing slow" }
}
